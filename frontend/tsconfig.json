{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "outDir": "./dist",
    "types": ["react", "react-dom", "node", "electron"]
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/types.d.ts"]
}
